<Page x:Class="Casino.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Casino.Pages"
      mc:Ignorable="d"
      Title="LoginPage" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="450">
            <TextBlock Margin="5">Логин</TextBlock>
            <TextBox Margin="5" Name="LoginTB" HorizontalAlignment="Stretch"></TextBox>
            <TextBlock Margin="5">Пароль</TextBlock>
            <PasswordBox Margin="5" Name="PasswordPB" HorizontalAlignment="Stretch"></PasswordBox>
            <Button Click="EnterClick" Margin="5" HorizontalAlignment="Stretch">Войти</Button>
            <TextBlock HorizontalAlignment="Right" Margin="5" Foreground="Blue" MouseDown="RegisterClick">Зарегистрироваться</TextBlock>
        </StackPanel>
    </Grid>
</Page>